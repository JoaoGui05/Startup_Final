<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConclusaoRota">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="24dp"
      android:background="@color/white">

    <TextView
        android:id="@+id/tvMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rota concluída com sucesso!"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvMensagem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A rota de vigilância foi finalizada, por favor verifique se todas as áreas foram especionadas corretamente e se não há nada fora do comum."
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnVoltarInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar para o Início"/>
  </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>