<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:text="Registro de Ponto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegistrarEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Entrada"/>

        <TextView
            android:text="Horários Registrados"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtHorarioEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtHorarioAlmoco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:padding="4dp" />

        <TextView
            android:id="@+id/txtHorarioRetorno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:padding="4dp" />

        <TextView
            android:text="Histórico de Pontos"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ontem: 08:00 - 17:00"
            android:padding="4dp" />

        <Button
            android:id="@+id/btnRegistrarSaida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Saída"
            android:layout_marginTop="24dp" />
    </LinearLayout>

</FrameLayout>